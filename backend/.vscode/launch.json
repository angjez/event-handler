  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to node",
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "port": 9229,
      "sourceMaps": true,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/app",
      "sourceMapPathOverrides": {
        "/usr/app/*": "${workspaceFolder}/*"
      }
    }
  ]
}
